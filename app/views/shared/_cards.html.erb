<div class="wrap">
  <div class="container">
      <h2 id="start">All cocktails</h2>
      <div class="row">
        <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do  %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo? ?  cocktail.photo : "lkgaqzb9hc9garraymlm.jpg" %>);">
              <div class="card-description">
                <h2> <%=  cocktail.name %> </h2>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>
    <div class="my-btn">
      <%= link_to "New cocktail", new_cocktail_path  %>
    </div>
  </div>
</div>
