<div class="page" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.4) 50%), url(<%= image_path "banner.jpg" %>)">
<div class="header">

 <div class="logo-banner">
    <%= image_tag "salad.png", class: "avatar" %>
  </div>
  <div class="sign-up">
    <a href="#" class="header-element"> Log In </a>
    <a href="#" class="header-element"> Sign Up </a>
  </div>
</div>
  <div class="banner">
    <div class="content-banner">
      <h1>Create and Find best cocktails</h1>
      <div class="content-search-bar">
        <div class="row">
          <form action="#" class="form-inline form-skel">
              <div class="form-group">
                <input type="text" name="" placeholder="Bloody mary">
              </div>
              <input type="submit" name="" class="button button-primary" value="Search">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="container">
  <div class="icon-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="icon-content">
          <%= image_tag "globe" %>
             <h2>Discover new drinks</h2>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="icon-content">
          <%= image_tag "dollar" %>
          <h2>Make money</h2>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="icon-content">
          <%= image_tag "beer" %>
          <h2>Enjoy</h2>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="icon-content">
          <%= image_tag "heart" %>
          <h2>Share and love</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="wrap">
  <div class="container">
    <h2 id="start">All cocktails</h2>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do  %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path cocktail.photo? ?  cocktail.photo : "lkgaqzb9hc9garraymlm.jpg" %>);">
            <div class="card-description">
              <h2> <%=  cocktail.name %> </h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  <div class="my-btn">
    <%= link_to "New cocktail", new_cocktail_path, class: ""  %>
  </div>
</div>


